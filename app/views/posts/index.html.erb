<div class="post-index">
  <%= render 'shared/search' %>
  <div class="post-container">
    <% @posts.each do |post| %>
      <%= link_to post_path(post.id) do%>
        <% if post.post_image.attached? %>
          <figure class="image">
            <%= image_tag post.post_image.variant(gravity: :center, resize:"160x160^", crop:"160x160+0+0") %>
          </figure>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= paginate @posts %>
  </div>  
</div>