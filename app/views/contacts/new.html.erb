<div class="contact-new-container">
  <section class="hero is-info">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          お問い合わせ
        </h1>
      </div>
    </div>
  </section>
  <%= form_with model: @contact, local: true do |f| %>

    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "message" %>
    </div>

    <div class="form-group">
      <%= f.label :message, 'お問い合わせ内容' %>
      <%= f.text_area :message, size: '10x10', autofocus: true, autocomplete: "message" %>
    </div>
    <div class="contact-submit">
      <%= f.submit '送信' %>
    </div>
  <% end %>
</div>